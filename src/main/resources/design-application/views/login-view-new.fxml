<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecommerce.controllers.LoginController"
            prefHeight="600" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">

    <center>
        <HBox spacing="0" alignment="CENTER">
            <!-- Login Form -->
            <VBox fx:id="loginBox" spacing="15" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 15 0 0 15;" prefWidth="450">
                <Label text="Welcome Back!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Sign in to your account" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                
                <VBox spacing="8" style="-fx-padding: 20 0 0 0;">
                    <Label text="Email" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="txtEmail" promptText="email@example.com" 
                               style="-fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    
                    <Label text="Password" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <PasswordField fx:id="txtPassword" promptText="••••••••" 
                                   style="-fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                </VBox>
                
                <Button text="Sign In" onAction="#handleLogin" maxWidth="Infinity"
                        style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8;"/>
                
                <Button text="Continue as Guest" onAction="#handleGuest" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-border-color: #667eea; -fx-border-width: 2; -fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8;"/>
                
                <Separator/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;"/>
                    <Hyperlink text="Sign Up" onAction="#showRegisterForm" style="-fx-text-fill: #667eea; -fx-font-weight: bold;"/>
                </HBox>
                
                <Hyperlink text="Admin Login" onAction="#handleAdminLogin" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
                
                <Label fx:id="lblStatus" text=" " style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
            </VBox>

            <!-- Registration Form -->
            <VBox fx:id="registerBox" spacing="15" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 0 15 15 0;" prefWidth="450" visible="false" managed="false">
                <Label text="Create Account" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Join us today!" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                
                <VBox spacing="8" style="-fx-padding: 10 0 0 0;">
                    <Label text="Full Name" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="txtRegName" promptText="John Doe" 
                               style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    
                    <Label text="Email" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="txtRegEmail" promptText="email@example.com" 
                               style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    
                    <Label text="Password" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <PasswordField fx:id="txtRegPassword" promptText="••••••••" 
                                   style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    
                    <Label text="Phone" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="txtRegPhone" promptText="+1234567890" 
                               style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                    
                    <Label text="Address" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="txtRegAddress" promptText="123 Main St, City" 
                               style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                </VBox>
                
                <Button text="Create Account" onAction="#handleRegister" maxWidth="Infinity"
                        style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8;"/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d;"/>
                    <Hyperlink text="Sign In" onAction="#showLoginForm" style="-fx-text-fill: #667eea; -fx-font-weight: bold;"/>
                </HBox>
                
                <Label fx:id="lblRegStatus" text=" " style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>
