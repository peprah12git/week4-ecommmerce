<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ecommerce.controllers.CheckoutController"
      prefHeight="750.0" prefWidth="1180.0" spacing="20">

    <padding>
        <Insets top="15" left="15" right="15" bottom="15" />
    </padding>

    <Label text="Checkout" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Shipping and Payment Info -->
        <VBox prefWidth="650" spacing="15">
            <!-- Shipping Address -->
            <TitledPane text="Shipping Address" collapsible="false">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="300" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>

                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextArea fx:id="addressField" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    
                    <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    
                    <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
            </TitledPane>

            <!-- Order Notes (Optional) -->
            <TitledPane text="Order Notes (Optional)" collapsible="false">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TextArea fx:id="orderNotesField" promptText="Add any special instructions for your order..." 
                              prefRowCount="3" wrapText="true" />
                </VBox>
            </TitledPane>
        </VBox>

        <!-- Order Summary -->
        <VBox prefWidth="450" spacing="15">
            <TitledPane text="Order Summary" collapsible="false">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <TableView fx:id="summaryTable" prefHeight="300">
                        <columns>
                            <TableColumn text="Product" prefWidth="200" fx:id="productColumn" />
                            <TableColumn text="Qty" prefWidth="50" fx:id="qtyColumn" />
                            <TableColumn text="Price" prefWidth="100" fx:id="priceColumn" />
                        </columns>
                    </TableView>

                    <Separator />

                    <HBox spacing="10">
                        <Label text="Subtotal:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="checkoutSubtotal" text="0.00" />
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Shipping:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="FREE" style="-fx-text-fill: #27ae60;" />
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Tax:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="checkoutTax" text="0.00" />
                    </HBox>

                    <Separator />

                    <HBox spacing="10">
                        <Label text="Total:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="checkoutTotal" text="0.00" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #e74c3c;" />
                    </HBox>

                    <Separator />

                    <Button text="Place Order" prefHeight="40" style="-fx-font-size: 14; -fx-font-weight: bold;" onAction="#placeOrder" />
                    <Button text="Back to Cart" style="-fx-font-size: 12;" onAction="#backToCart" />
                </VBox>
            </TitledPane>
        </VBox>
    </HBox>

</VBox>
