    <!-- Left Sidebar Navigation -->
    <left>
        <VBox prefWidth="250" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 0);">
