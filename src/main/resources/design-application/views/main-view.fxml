                        style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 15 25; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 8;"
