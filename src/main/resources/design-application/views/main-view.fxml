            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Admin Info Section -->
            <VBox spacing="8" style="-fx-padding: 20 0 0 0; -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 1 0 0 0;">
