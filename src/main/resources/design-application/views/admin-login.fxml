<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ecommerce.controllers.AdminLoginController"
      prefHeight="400.0" prefWidth="450.0" alignment="CENTER" spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

    <padding>
        <Insets top="40" left="40" right="40" bottom="40" />
    </padding>

    <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);">
        <padding>
            <Insets top="40" left="40" right="40" bottom="40" />
        </padding>

        <VBox alignment="CENTER" spacing="10">
            <Label text="ðŸ”" style="-fx-font-size: 48;" />
            <Label text="Admin Portal" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #667eea;" />
            <Label text="Secure Access Only" style="-fx-font-size: 12; -fx-text-fill: #666;" />
        </VBox>

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Email Address" style="-fx-font-size: 12; -fx-text-fill: #333; -fx-font-weight: bold;" />
                <TextField fx:id="emailField" promptText="admin@example.com" 
                          style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 10;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 12; -fx-text-fill: #333; -fx-font-weight: bold;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" 
                              style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 10;" />
            </VBox>

            <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12;" />

            <Button text="Sign In" onAction="#handleAdminLogin" defaultButton="true"
                   style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-pref-height: 45; -fx-background-radius: 8; -fx-cursor: hand;"
                   maxWidth="Infinity">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Button>
        </VBox>

        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Not an admin?" style="-fx-font-size: 12; -fx-text-fill: #666;" />
            <Hyperlink text="User Login" onAction="#handleSwitchToUserLogin" 
                      style="-fx-font-size: 12; -fx-text-fill: #667eea; -fx-underline: true;" />
        </HBox>
    </VBox>
</VBox>
