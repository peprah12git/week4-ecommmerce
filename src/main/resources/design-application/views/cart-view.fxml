<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.controllers.CartViewController"
      alignment="CENTER" spacing="20" prefWidth="900" prefHeight="600"
      style="-fx-padding: 20;">

    <Label text="Shopping Cart" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <TableView fx:id="cartTable" prefHeight="350" prefWidth="850">
        <columns>
            <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="250" />
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="120" />
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100" />
            <TableColumn fx:id="subtotalColumn" text="Subtotal" prefWidth="120" />
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="120" />
        </columns>
        <placeholder>
            <Label text="Your cart is empty." style="-fx-text-fill: #888; -fx-font-size: 16;" />
        </placeholder>
    </TableView>

    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="decreaseBtn" text="-" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" onAction="#handleDecreaseQuantity" />
        <Label text="Adjust Quantity" style="-fx-font-size: 14;" />
        <Button fx:id="increaseBtn" text="+" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" onAction="#handleIncreaseQuantity" />
    </HBox>

    <HBox spacing="50" alignment="CENTER">
        <VBox spacing="8">
            <Label text="Subtotal:" style="-fx-font-size: 14;" />
            <Label text="Shipping:" style="-fx-font-size: 14;" />
            <Label text="Tax (10%):" style="-fx-font-size: 14;" />
            <Label text="Total:" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        </VBox>
        <VBox spacing="8">
            <Label fx:id="subtotalLabel" text="0.00" style="-fx-font-size: 14;" />
            <Label fx:id="shippingLabel" text="FREE" style="-fx-font-size: 14; -fx-text-fill: green;" />
            <Label fx:id="taxLabel" text="0.00" style="-fx-font-size: 14;" />
            <Label fx:id="totalLabel" text="0.00" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
        </VBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Continue Shopping" style="-fx-font-size: 14; -fx-padding: 10 20;" onAction="#continueShopping" />
        <Button text="Proceed to Checkout" style="-fx-font-size: 14; -fx-padding: 10 20; -fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#checkout" />
    </HBox>

</VBox>
